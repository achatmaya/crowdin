{% extends 'base.html.twig' %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">Add a translation for source "{{ source.getName() }}"</h1>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="{{ form.content.vars.id }}">Source Content</label>
                        <p class="form-control">{{ source.getContent() }}</p>
                    </div>

                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.content) }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.language) }}
                        {{ form_widget(form.language, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <button type="submit" class="btn btn-primary">Add Translation</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
